#!/usr/bin/env bash

cd ~/nixfiles
# git pull
sudo nixos-rebuild switch --show-trace
status=$?
if [ $status -eq 0 ]; then
    git add -u
    ([ -z $1 ] 2>/dev/null && git commit -m "$(date +%F--%T)") || git commit -m "$(date +%F--%T): \"$1\""
else
    echo -e "'nixos-rebuild switch' failed: not committing changes"
fi
# git push
